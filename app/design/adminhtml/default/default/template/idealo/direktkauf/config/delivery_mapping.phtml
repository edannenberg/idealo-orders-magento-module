$aIdealoDeliveryTypes = $this->getIdealoDeliveryTypes();
$aShopDeliveryTypes = $this->getShopDeliveryTypes();
$aDeliveryCarriers = $this->getIdealoDeliveryCarriers();
?>
<table>
    <?php foreach ($aIdealoDeliveryTypes as $sKey => $sTitle) { ?>
        <tr>
            <td>
                <select name="<?php echo $this->getElement()->getName(); ?>[<?php echo $sKey; ?>][type]" style="width:222px;">
                    <option value=""><?php echo Mage::helper('adminhtml')->__('-- Please Select --'); ?></option>
                    <option value="0" <?php if($this->getValueByTypeKey($sKey) == "0") echo 'selected'; ?>><?php echo Mage::helper('idealo_direktkauf')->__('Not used'); ?></option>
                    <?php foreach ($aShopDeliveryTypes as $sShopDelKey => $sShopDelTitle) { ?>
                        <option value="<?php echo $sShopDelKey; ?>" <?php if($this->getValueByTypeKey($sKey) == $sShopDelKey) echo 'selected'; ?>><?php echo $sShopDelTitle; ?></option>
                    <?php } ?>
                </select>
            </td>
            <td>
                <select name="<?php echo $this->getElement()->getName(); ?>[<?php echo $sKey; ?>][carrier]" style="width:130px;">
                    <option value=""><?php echo Mage::helper('adminhtml')->__('-- Please Select --'); ?></option>
                    <option value="0" <?php if($this->getValueByCarrierKey($sKey) == "0") echo 'selected'; ?>><?php echo Mage::helper('idealo_direktkauf')->__('Not used'); ?></option>
                    <?php foreach ($aDeliveryCarriers as $sCarrierKey => $sCarrierTitle) { ?>
                        <option value="<?php echo $sCarrierKey; ?>" <?php if($this->getValueByCarrierKey($sKey) == $sCarrierKey) echo 'selected'; ?>><?php echo $sCarrierTitle; ?></option>
                    <?php } ?>
                </select>                
            </td>
            <td>
                <div style="margin-left:5px;width: 60px;"><?php echo $sTitle; ?></div>
            </td>
        </tr>
    <?php } ?>
</table>